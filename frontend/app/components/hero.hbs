<div class="flex flex-col w-full md:pl-16 h-full ">
    <div class="w-full flex flex-col md:justify-center items-center md:flex-row h-full ">
        <div class="w-2/3 mt-20 md:w-1/3 flex justify-center items-start h-72 sm:h-96 md:h-4/5 ">
            <img src="Portrait.png" alt="My face" class="object-scale-down md:h-5/6 grayscale h-full">
        </div>


        <div class="text-5xl text-black text-center w-32 md:h-[12.8rem] ">
            I am:
        </div>
        <div class="w-full md:w-1/3 ">
            <Scroller />
        </div>
    </div>

    <div id="arrow"
        class="doanimation duration-1000 h-10 text-transparent flex justify-center items-center cursor-pointer"
        {{on "click" (fn @move-view 2)}}>

        <i class="fas fa-arrow-down text-5xl animate-bounce pb-36 md:pb-22"></i>

    </div>
</div>